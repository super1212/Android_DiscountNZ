<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/txtFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:text="Display Filter"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/txtCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@android:drawable/ic_menu_zoom"
            android:drawablePadding="2dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="Category"
            android:textSize="18sp" />


        <ListView
            android:id="@+id/categoryListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/txtBrand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@android:drawable/ic_menu_crop"
            android:drawablePadding="2dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="Brand"
            android:textSize="18sp" />

        <ListView
            android:id="@+id/brandListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@android:drawable/ic_menu_today"
            android:drawablePadding="2dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="Date"
            android:textSize="18sp" />

        <ListView
            android:id="@+id/dateListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginHorizontal="16dp"
            android:text="Back" />

        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="-50dp"
            android:text="Confirm" />


    </LinearLayout>
</ScrollView>
